{% macro mkProjCard(project) %}
<a class="project-card card bgsync" href="/projects/{{ project.id }}">
    {% if project.keyart %}
        <div class="proj-card-keyart-holder">
            {{ project.keyart | mkImg("project-card-keyart") }}
        </div>
    {% endif %}
    {% if project.icon and not project.keyart %}
        {{ project.icon | mkImg("project-card-icon") }}
    {% endif %}
    <div class="project-card-body">
        <div class="project-card-title">{{ project.name }}</div>
        <p class="project-card-summary">{{ project.summary }}</p>
    </div>
</a>
{% endmacro %}


{% macro mkPostCard(post) %}
<a class="project-card post-card card bgsync" href="/articles/{{ post.id }}">
    {% if post.banner %}
        <div class="proj-card-keyart-holder">
            {{ post.banner | mkImg("project-card-keyart") }}
        </div>
    {% endif %}
    <div class="project-card-body">
        <div class="project-card-title">{{ post.title }}</div>
        <p class="project-card-date">{{ post.date.toLocaleString('en-US', { timeZone: 'EST' }) }}</p>
        <p class="project-card-summary">{{ post.description }}</p>
    </div>
</a>
{% endmacro %}