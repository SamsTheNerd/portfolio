{% extends "page.njk" %}

{% block header %}
    {% if project.icon %}
        <link rel="icon" type="image/x-icon" href="/assets/{{ project.icon }}">
    {% endif %}
    <link rel="stylesheet" href="/articles.css">
{% endblock %}

{% block title %}{{ project.name }}{% endblock %}

{% block maincontent %}
    {% if project.banner %}
        {{ project.banner | mkImg("banner") }}
    {% endif %}
    <div id="info-header">
        {% if project.icon and not project.banner %}
            {{ project.icon | mkImg("project-icon") }}
        {% endif %}
        <h1 id="page-title">{{ project.name}}</h1>
        {# <hr> #}
        <div class="tag-shelf">
            {% for tagId in project.tags %}
                {{ tagId | mkTag }}
            {% endfor %}
        </div>
        <hr>
    </div>
    <div class="project-desc">
        {{ project | getDesc}}
    </div>
{% endblock %}